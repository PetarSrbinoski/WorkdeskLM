# --- Services ---
API_PORT=8000
UI_PORT=8501
QDRANT_PORT=6333

# --- API config ---
APP_ENV=dev
LOG_LEVEL=INFO

# Qdrant reachable from inside Docker network
QDRANT_URL=http://qdrant:6333

# Ollama runs on Windows host; containers can access: host.docker.internal
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Defaults for later; harmless now
FAST_MODEL=phi3:mini
QUALITY_MODEL=qwen2.5:7b-instruct

#Embedings
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_BATCH_SIZE=32
QDRANT_COLLECTION=chunks_v1

OTEL_SERVICE_NAME=workdesklm-api
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

#rerank
ENABLE_RERANK=true
RERANK_MODEL=BAAI/bge-reranker-base
RERANK_CANDIDATES=20
